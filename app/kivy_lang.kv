<TextUI>:
    canvas:
        Color:
            rgb:1,1,1
        Ellipse:
            size:100,100
            pos:root.center_x-50, root.height-180
            source:'pics/user.png'
    MDBoxLayout:
        orientation:'vertical'
        MDToolbar:
            title:'Sign Up'
            anchor_title:'center'
        MDBoxLayout:
            size_hint_y:1
            orientation:'vertical'
            spacing:dp(7)
            pos_hint_y:{'top':1}
            Inputs:
                id:Fn
                hint_text:'First Name'
                icon_right:'account-circle'
            Inputs:
                id:Mn
                hint_text:'Middle Name'
                icon_right:'account-circle'
            Inputs:
                id:Ln
                hint_text:'Last Name'
                icon_right:'account-circle'
            Inputs:
                id:Ea
                hint_text:'Email Adress'
                icon_right:'email-outline'
            Inputs:
                id:Hn
                hint_text:'KRA House Number'
                icon_right:'home-export-outline'
            Inputs:
                id:Rl
                hint_text:'Rental Location'
                icon_right:'map-marker'
            Inputs:
                id:Rt
                hint_text:'Rental Type'
                icon_right:'home-circle'
            Inputs:
                id:pswd
                hint_text:'Password'
                icon_right:'key'
                password:True
            Inputs:
                id:c_pswd
                hint_text:'Confirm Password'
                password:True
                icon_right:'key'
            MDFillRoundFlatButton:
                text:'Submit'
                pos_hint:{'center_x':.5}
                on_release:root.user_details()
        MDBoxLayout:
            size_hint_y:.2


<Inputs@MDTextFieldRound>:
    size_hint_x:.8
    pos_hint:{'center_x':.5}
    normal_color:[1,1,1,0]
    color_active:1,1,1,0
    multiline:False
    required:True